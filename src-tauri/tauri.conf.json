{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mist",
  "version": "0.4.7",
  "identifier": "com.fastfingertips.mist",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:4567",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Mist",
        "width": 1000,
        "height": 700,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "windowEffects": {
          "effects": [
            "mica"
          ],
          "state": "active",
          "color": "#000000"
        },
        "shadow": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}